<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevAcademy - Watch Lesson</title>
  <link rel="stylesheet" href="/tv.css">
  <link rel="stylesheet" href="/custom-player.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link rel="icon" type="image/x-icon" href="/images/logo.png">
  <style>
    * {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body>
  <!-- Loading Screen -->
  <div id="loadingScreen" class="loading-screen">
    <div class="loading-spinner">
      <div class="spinner"></div>
      <p>Loading lesson...</p>
    </div>
  </div>

  <!-- Header -->
  <header class="tv-header">
    <nav class="navbar">
      <div class="nav-brand">
        <a href="/">
          <img src="/images/logo2-removebg-preview.png" alt="Logo" height="55em">
        </a>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/course">Courses</a></li>
        {{#if isLoggedIn}}
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout" class="btn-logout">Logout</a></li>
        {{else}}
        <li><a href="/login">Login</a></li>
        <li><a href="/signup" class="btn-signup">Sign Up</a></li>
        {{/if}}
      </ul>
      <button class="menu-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
        <span class="material-symbols-outlined">menu</span>
      </button>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="tv-main">
    <div class="tv-container">
      <!-- Left Side - Video Player -->
      <div class="video-section">
        <!-- Course Info Header -->
        <div class="course-header-modern">
          <div class="course-header-content">
            <h1 id="courseTitle" class="course-title-modern">Loading...</h1>
            <div class="course-meta">
              <span id="chapterTitle" class="chapter-badge">Chapter 1</span>
              <span id="lessonProgress" class="progress-badge">Progress: 0/0</span>
            </div>
          </div>
          <button id="markCompleteBtn" class="btn-mark-complete-modern" onclick="markLessonComplete()">
            <span class="material-symbols-outlined">check_circle</span>
            <span id="markCompleteText">Mark as Completed</span>
          </button>
        </div>

        <!-- Video Player Container -->
        <div class="video-player-container">
          <div class="custom-video-wrapper paused" id="customVideoWrapper">
            <div id="videoContainer" class="video-container">
              <!-- Iframe will be injected here -->
            </div>

            <!-- Click Area for Play/Pause -->
            <div class="video-click-area" onclick="togglePlayPause()">
              <div class="big-play-button">
                <span class="material-symbols-outlined" style="font-size: 40px;">play_arrow</span>
              </div>
            </div>

            <!-- Controls Overlay -->
            <div class="video-controls-overlay">
              <!-- Timeline -->
              <div class="video-timeline-container" id="videoTimeline" onclick="seekVideo(event)">
                <div class="video-progress-bar" id="videoProgressBar">
                  <div class="video-progress-handle"></div>
                </div>
              </div>

              <!-- Buttons Row -->
              <div class="controls-row">
                <div class="left-controls">
                  <button class="control-btn" id="playPauseBtn" onclick="togglePlayPause()">
                    <span class="material-symbols-outlined">play_arrow</span>
                  </button>
                  <div class="time-display">
                    <span id="currentTime">0:00</span> / <span id="totalTime">0:00</span>
                  </div>
                </div>
                <div class="right-controls">
                  <button class="control-btn" onclick="toggleFullscreen()">
                    <span class="material-symbols-outlined">fullscreen</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Lesson Title -->
        <div class="lesson-title-section">
          <h2 id="lessonTitle" class="lesson-title-modern">Loading lesson...</h2>
        </div>

        <!-- Navigation Buttons -->
        <div class="lesson-navigation-modern">
          <button id="prevBtn" class="btn-nav-modern btn-prev-modern" onclick="navigateLesson('prev')" disabled>
            <span class="material-symbols-outlined">arrow_back</span>
            <span>Previous Lesson</span>
          </button>
          <button id="nextBtn" class="btn-nav-modern btn-next-modern" onclick="navigateLesson('next')" disabled>
            <span>Next Lesson</span>
            <span class="material-symbols-outlined">arrow_forward</span>
          </button>
        </div>
      </div>

      <!-- Right Side - Course Index -->
      <aside class="course-index-sidebar">
        <div class="sidebar-header">
          <h3>
            <span class="material-symbols-outlined">menu_book</span>
            Course Index
          </h3>
        </div>
        <div class="sidebar-content">
          <div id="chaptersAccordion" class="chapters-accordion">
            <!-- Chapters will be dynamically loaded here -->
          </div>
        </div>
      </aside>
    </div>
  </main>

  <!-- Mobile Offcanvas Menu -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasRightLabel">Menu</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <a href="/" class="offcanvas-link">
        <span class="material-symbols-outlined">home</span> Home
      </a>
      <a href="/course" class="offcanvas-link">
        <span class="material-symbols-outlined">book</span> Courses
      </a>
      {{#if isLoggedIn}}
      <a href="/dashboard" class="offcanvas-link">
        <span class="material-symbols-outlined">dashboard</span> Dashboard
      </a>
      <a href="/logout" class="offcanvas-link text-danger">
        <span class="material-symbols-outlined">logout</span> Logout
      </a>
      {{else}}
      <a href="/login" class="offcanvas-link">
        <span class="material-symbols-outlined">login</span> Login
      </a>
      <a href="/signup" class="offcanvas-link">
        <span class="material-symbols-outlined">person_add</span> Sign Up
      </a>
      {{/if}}
    </div>
  </div>

  <script src="/tv.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>