<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{path.title}} - Interactive Roadmap</title>
    <link rel="stylesheet" href="/interactive-roadmap.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <style>
        * {
            font-family: 'Outfit', sans-serif;
        }
    </style>
</head>

<body class="dark-theme">

    <!-- Background Elements -->
    <div class="bg-glow bg-glow-1"></div>
    <div class="bg-glow bg-glow-2"></div>
    <div class="grid-overlay"></div>

    <!-- Navigation Header -->
    <nav class="glass-nav sticky-top">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <a href="/interactive/paths" class="back-btn">
                <span class="material-symbols-rounded icon">arrow_back</span>
                <span class="text">Paths</span>
            </a>

            <div class="path-identity text-center">
                <div class="badge-lang-container mb-1">
                    <span class="badge-lang {{path.programming_language}}">{{path.programming_language}}</span>
                </div>
                <h1 class="h5 m-0 fw-bold text-white">{{path.title}}</h1>
            </div>

            <div class="user-stats">
                <!-- Placeholder for future gamification stats -->
                <div class="xp-pill">
                    <span class="material-symbols-rounded text-warning">bolt</span>
                    <span class="fw-bold">Level 1</span>
                </div>
            </div>
        </div>
    </nav>

    <main class="roadmap-wrapper">
        <div class="container">
            {{#if isPathLocked}}
            <div class="alert alert-warning d-flex align-items-center justify-content-between mb-4 shadow" role="alert"
                style="background: rgba(43, 26, 0, 0.8); border: 1px solid #fbbf24; backdrop-filter: blur(10px); color: #fbbf24;">
                <div class="d-flex align-items-center">
                    <span class="material-symbols-rounded fs-2 me-3">workspace_premium</span>
                    <div>
                        <h5 class="alert-heading m-0 fw-bold">Full Access Locked</h5>
                        <p class="mb-0 small">You are viewing this roadmap in Preview Mode. Upgrade your membership to
                            unlock all missions.</p>
                    </div>
                </div>
                <a href="/interactive/paths#pricing" class="btn btn-warning fw-bold d-none d-md-block">Unlock Now</a>
            </div>
            {{/if}}

            <!-- Progress Floating Header -->
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 col-md-10">
                    <div class="progress-floating-card">
                        <div class="d-flex justify-content-between align-items-end mb-2">
                            <div>
                                <h6 class="text-white fw-bold mb-0">Your Journey</h6>
                                <small class="text-white-50"><span id="completedCount">0</span> / <span
                                        id="totalCount">{{lessons.length}}</span> Missions</small>
                            </div>
                            <span class="text-primary fw-bolder fs-4" id="progressText">0%</span>
                        </div>
                        <div class="progress custom-progress">
                            <div class="progress-bar" id="mainProgressBar" role="progressbar" style="width: 0%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- The Timeline -->
            <div class="timeline-container">
                <div class="timeline text-center">

                    <!-- Vertical Track Line -->
                    <div class="timeline-track"></div>

                    {{#each lessons}}
                    <div
                        class="timeline-item {{#if this.progress.completed}}completed{{/if}} {{#if this.progress.completed}}unlocked{{else}}{{#if this.isUnlocked}}unlocked current{{else}}locked{{/if}}{{/if}}">

                        <!-- The Circle Marker on the Line -->
                        <div class="timeline-marker">
                            <div class="marker-icon">
                                {{#if this.progress.completed}}
                                <span class="material-symbols-rounded">check</span>
                                {{else if this.isUnlocked}}
                                <span class="material-symbols-rounded">play_arrow</span>
                                {{else}}
                                {{#if this.isMembershipLocked}}
                                <span class="material-symbols-rounded"
                                    style="color: #fbbf24; filter: drop-shadow(0 0 8px rgba(251, 191, 36, 0.4));">workspace_premium</span>
                                {{else}}
                                <span class="material-symbols-rounded">lock</span>
                                {{/if}}
                                {{/if}}
                            </div>
                            <!-- Pulse effect for current unlocked item -->
                            {{#if this.isUnlocked}}{{#unless this.progress.completed}}
                            <div class="marker-pulse"></div>
                            {{/unless}}{{/if}}
                        </div>

                        <!-- The Content Card (Left or Right) -->
                        <div class="timeline-content">
                            <div class="card-glass">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="mission-badge">
                                        Mission {{this.order_number}}
                                        {{#if this.isFree}}
                                        <span class="badge bg-success ms-2"
                                            style="font-size: 0.6em; vertical-align: middle;">FREE</span>
                                        {{else}}
                                        <span class="badge ms-2"
                                            style="font-size: 0.6em; vertical-align: middle; background: rgba(251, 191, 36, 0.2); color: #fbbf24; border: 1px solid rgba(251, 191, 36, 0.4);">PREMIUM</span>
                                        {{/if}}
                                    </span>
                                    <div class="status-indicator"></div>
                                </div>
                                <h3 class="card-title">{{this.title}}</h3>
                                <p class="card-text text-white-50 small text-truncate">{{this.code_challenge}}</p>

                                <div class="action-area mt-3">
                                    {{#if this.isUnlocked}}
                                    <a href="/interactive/lesson/{{this.lesson_id}}" class="btn-play w-100">
                                        {{#if this.progress.completed}}Replay Mission{{else}}
                                        {{#if this.isFree}}Start Free Preview{{else}}Start Mission{{/if}}
                                        {{/if}}
                                    </a>
                                    {{else}}
                                    {{#if this.isMembershipLocked}}
                                    <a href="/interactive/paths#pricing"
                                        class="btn-locked w-100 d-block text-decoration-none text-center">
                                        <span class="material-symbols-rounded fs-6 me-1"
                                            style="color: #fbbf24;">workspace_premium</span> Unlock with Membership
                                    </a>
                                    {{else}}
                                    <button class="btn-locked w-100" disabled>
                                        <span class="material-symbols-rounded fs-6 me-1">lock</span> Locked (Complete
                                        Previous)
                                    </button>
                                    {{/if}}
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}


                    <!-- Final Trophy Node -->
                    <div class="timeline-item final-node">
                        <div class="timeline-marker marker-trophy">
                            <span class="material-symbols-rounded fs-3">emoji_events</span>
                        </div>
                        <div class="timeline-content">
                            <div class="card-glass p-4 text-center">
                                <h4 class="text-warning fw-bold">Path Completion</h4>
                                <p class="small text-white-50 mb-0">Complete all missions to earn your certificate of
                                    mastery.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <script>
        // Progress Logic with Animation
        const lessons = {{{ json lessons }}};
        const total = lessons.length;
        const completed = lessons.filter(l => l.progress && l.progress.completed).length;
        const percent = total === 0 ? 0 : Math.round((completed / total) * 100);

        // Animate progress bar
        setTimeout(() => {
            const progressBar = document.getElementById('mainProgressBar');
            progressBar.style.width = percent + '%';
            progressBar.style.transition = 'width 1.2s cubic-bezier(0.4, 0, 0.2, 1)';
        }, 300);

        // Animate counter
        let currentCount = 0;
        const countDuration = 1000;
        const countStep = completed / (countDuration / 16);
        const countInterval = setInterval(() => {
            currentCount += countStep;
            if (currentCount >= completed) {
                currentCount = completed;
                clearInterval(countInterval);
            }
            document.getElementById('completedCount').textContent = Math.floor(currentCount);
        }, 16);

        // Animate percentage
        let currentPercent = 0;
        const percentStep = percent / (countDuration / 16);
        const percentInterval = setInterval(() => {
            currentPercent += percentStep;
            if (currentPercent >= percent) {
                currentPercent = percent;
                clearInterval(percentInterval);
            }
            document.getElementById('progressText').textContent = Math.floor(currentPercent) + '%';
        }, 16);

        // Add smooth scroll to timeline items
        document.querySelectorAll('.timeline-item').forEach((item, index) => {
            item.style.animationDelay = `${index * 0.1}s`;
        });
    </script>
</body>

</html>