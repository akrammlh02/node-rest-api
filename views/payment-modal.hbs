<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="paymentModalLabel">
          <span class="material-symbols-outlined">payment</span>
          Complete Your Payment
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Course Info -->
        <div class="payment-course-info mb-4">
          <div class="d-flex align-items-center">
            <img id="paymentCourseImage" src="" alt="Course" class="payment-course-thumbnail me-3">
            <div>
              <h6 id="paymentCourseTitle" class="mb-1"></h6>
              <p class="text-muted mb-0 small">Course ID: <span id="paymentCourseId"></span></p>
            </div>
            <div class="ms-auto">
              <div class="payment-amount">
                <span class="amount-label">Total</span>
                <span id="paymentAmount" class="amount-value">0 DA</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Methods Tabs -->
        <ul class="nav nav-pills nav-fill mb-4" id="paymentMethodTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="online-tab" data-bs-toggle="tab" data-bs-target="#online-payment"
              type="button" role="tab">
              <span class="material-symbols-outlined">credit_card</span>
              Online Payment
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual-payment" type="button"
              role="tab">
              <span class="material-symbols-outlined">receipt</span>
              Manual Payment
            </button>
          </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="paymentMethodContent">
          <!-- Online Payment Tab -->
          <div class="tab-pane fade show active" id="online-payment" role="tabpanel">
            <div class="payment-methods-list">
              <!-- CIB/EDAHABIA (Slick-Pay) -->
              <div class="payment-method-card payment-tooltip" onclick="selectPaymentMethod('slickpay')"
                data-tooltip="Secured payment using Edahabia and CIB card">
                <div class="method-radio">
                  <input type="radio" name="paymentMethod" value="slickpay" id="method_slickpay">
                  <label for="method_slickpay"></label>
                </div>
                <div class="method-icon">
                  <span class="material-symbols-outlined">account_balance</span>
                </div>
                <div class="method-content">
                  <div class="method-title">CIB/EDAHABIA (Slick-Pay)</div>
                  <div class="method-gateway">
                    <span>Slick-Pay.com Secured Payment Gateway</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Manual Payment Tab -->
          <div class="tab-pane fade" id="manual-payment" role="tabpanel">
            <div class="payment-methods-list">
              <!-- CCP/Baridimob -->
              <div class="payment-method-card payment-tooltip" onclick="selectPaymentMethod('ccp_baridimob')"
                data-tooltip="Payment by CCP/Baridimob transfer - manual validation">
                <div class="method-radio">
                  <input type="radio" name="paymentMethod" value="ccp_baridimob" id="method_ccp_baridimob">
                  <label for="method_ccp_baridimob"></label>
                </div>
                <div class="method-icon">
                  <span class="material-symbols-outlined">credit_card</span>
                </div>
                <div class="method-content">
                  <div class="method-title">CCP/Baridimob</div>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="payment-method-card payment-tooltip whatsapp-card" onclick="selectPaymentMethod('whatsapp')"
                data-tooltip="Will redirect you to our team to pay with what you want">
                <div class="method-radio">
                  <input type="radio" name="paymentMethod" value="whatsapp" id="method_whatsapp">
                  <label for="method_whatsapp"></label>
                </div>
                <div class="method-icon whatsapp-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path
                      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                  </svg>
                </div>
                <div class="method-content">
                  <div class="method-title">WhatsApp Payment</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Info Display -->
        <div id="paymentInfoDisplay" class="payment-info-display mt-4" style="display: none;">
          <div class="alert alert-info">
            <h6 id="paymentInfoTitle"></h6>
            <p id="paymentInfoText" class="mb-2"></p>
            <div id="paymentInfoDetails"></div>
          </div>
        </div>

        <!-- Payment Proof Upload -->
        <div id="proofUploadSection" class="proof-upload-section mt-4" style="display: none;">
          <h6 class="mb-3">
            <span class="material-symbols-outlined">upload_file</span>
            Upload Payment Proof
          </h6>
          <div class="mb-3">
            <label for="paymentReference" class="form-label">Reference Number (Optional)</label>
            <input type="text" class="form-control" id="paymentReference"
              placeholder="Enter transaction/reference number">
          </div>
          <div class="mb-3">
            <label for="proofFile" class="form-label">Proof File</label>
            <input type="file" class="form-control" id="proofFile" accept="image/*,application/pdf">
            <small class="form-text text-muted">Upload screenshot or receipt (Image or PDF, max 5MB)</small>
          </div>
          <div id="proofPreview" class="mb-3" style="display: none;">
            <img id="proofPreviewImg" src="" alt="Proof Preview" class="img-thumbnail" style="max-width: 200px;">
          </div>
          <button type="button" class="btn btn-primary" onclick="uploadPaymentProof()">
            <span class="material-symbols-outlined">upload</span>
            Upload Proof
          </button>
        </div>

        <!-- Loading State -->
        <div id="paymentLoading" class="text-center py-4" style="display: none;">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Processing payment...</p>
        </div>

        <!-- Error Message -->
        <div id="paymentError" class="alert alert-danger mt-3" style="display: none;"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="proceedPaymentBtn" onclick="proceedToPayment()" disabled>
          <span class="material-symbols-outlined">arrow_forward</span>
          Proceed to Payment
        </button>
      </div>
    </div>
  </div>
</div>