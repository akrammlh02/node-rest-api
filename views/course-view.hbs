            </div>
        </div>

        <!-- Free Lesson Preview Modal -->
        <div class="modal fade" id="freeLessonModal" tabindex="-1" aria-labelledby="freeLessonModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content free-lesson-modal-content">
                    <div class="modal-header free-lesson-modal-header">
                        <h3 class="modal-title" id="freeLessonModalLabel">
                            <span class="material-symbols-outlined">play_circle</span>
                            <span id="modalLessonTitle">Free Preview</span>
                        </h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body free-lesson-modal-body">
                        <div class="free-video-container">
