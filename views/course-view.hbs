<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevAcademy - Course View</title>
  <link rel="stylesheet" href="/course-view.css">
  <link rel="stylesheet" href="/custom-player.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link rel="icon" type="image/x-icon" href="/images/logo.png">
  <style>
    * {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body>
  <header>
    <nav>
      <img src="/images/logo2-removebg-preview.png" alt="Logo" height="55em">
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/course">Courses</a></li>
        {{!-- <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            English
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/ar">العربية</a></li>
            <li><a class="dropdown-item" href="/">English</a></li>
          </ul>
        </li> --}}
        {{#if isLoggedIn}}
        <li><a href="/dashboard">Dashboard</a></li>
        <li><button type="button" class="btn btn-danger"><a href="/logout"> Logout</a></button></li>
        {{else}}
        <li><a href="/login">Login</a></li>
        <li><button type="button" class="btn signup"><a href="/signup"> Sign up</a></button></li>
        {{/if}}
      </ul>
      <div class="menu">
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"><span class="material-symbols-outlined">menu</span></button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <a href="/">Home</a>
            <a href="/course">Courses</a>
            {{!-- <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                English
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/ar">العربية</a></li>
                <li><a class="dropdown-item" href="/">English</a></li>
              </ul>
            </li> --}}
            {{#if isLoggedIn}}
            <a href="/dashboard">Dashboard</a>
            <div style="width: 50%;">
              <button type="button" class="btn btn-danger"><a href="/logout"> Logout</a></button>

            </div>
            {{else}}
            <a href="/login">Login</a>
            <div style="width: 50%;">
              <button type="button" class="btn signup"><a href="/signup"> Sign up</a></button>

            </div>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>
  </header>

  <main class="course-main">
    <div class="course-container">

      <!-- Preview Video Hero Section -->
      <div class="preview-hero-section" id="previewVideoSection" style="display: none;">
        <div class="custom-video-wrapper video-container paused" id="customVideoWrapper">
          <div id="videoContainer"></div> <!-- Container for YouTube API -->

          <!-- Click Area for Play/Pause -->
          <div class="video-click-area" onclick="togglePlayPause()">
            <div class="big-play-button">
              <span class="material-symbols-outlined" style="font-size: 40px;">play_arrow</span>
            </div>
          </div>

          <!-- Controls Overlay -->
          <div class="video-controls-overlay">
            <!-- Timeline -->
            <div class="video-timeline-container" id="videoTimeline" onclick="seekVideo(event)">
              <div class="video-progress-bar" id="videoProgressBar">
                <div class="video-progress-handle"></div>
              </div>
            </div>

            <!-- Buttons Row -->
            <div class="controls-row">
              <div class="left-controls">
                <button class="control-btn" id="playPauseBtn" onclick="togglePlayPause()">
                  <span class="material-symbols-outlined">play_arrow</span>
                </button>
                <div class="time-display">
                  <span id="currentTime">0:00</span> / <span id="totalTime">0:00</span>
                </div>
              </div>
              <div class="right-controls">
                <button class="control-btn" onclick="toggleFullscreen()">
                  <span class="material-symbols-outlined">fullscreen</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Course Info & CTA Section -->
      <div class="course-info-section">
        <div class="course-info-content">
          <div class="course-category" id="courseCategory" style="display: none;"></div>
          <h1 id="courseTitle" class="course-title">Loading...</h1>
          <p id="courseDescription" class="course-description"></p>

          <div class="course-highlights">
            <div class="highlight-item">
              <span class="material-symbols-outlined">person</span>
              <div>
                <span class="highlight-label">Instructor</span>
                <span class="highlight-value">Akram Melihi</span>
              </div>
            </div>
            <div class="highlight-item">
              <span class="material-symbols-outlined">schedule</span>
              <div>
                <span class="highlight-label">Duration</span>
                <span class="highlight-value" id="courseDuration">0 Hours</span>
              </div>
            </div>
            <div class="highlight-item">
              <span class="material-symbols-outlined">signal_cellular_alt</span>
              <div>
                <span class="highlight-label">Level</span>
                <span class="highlight-value" id="courseLevel">All Levels</span>
              </div>
            </div>
          </div>

          <div class="price-cta-section">
            <div class="price-box">
              <span class="price-label">Price</span>
              <span id="coursePrice" class="price">0 DA</span>
            </div>
            <button class="btn-enroll-primary" onclick="enrollCourse()">
              <span class="material-symbols-outlined">shopping_cart</span>
              Enroll Now
            </button>
          </div>
        </div>
      </div>

      <!-- Course Content Section -->
      <div class="course-content-section">
        <h2 class="section-title">
          <span class="material-symbols-outlined">menu_book</span>
          What You'll Learn
        </h2>
        <div id="chaptersContainer" class="chapters-container">
          <!-- Chapters will be dynamically added here -->
        </div>
      </div>
    </div>
  </main>

  <script src="/course-view.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>