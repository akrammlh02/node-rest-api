  <script>
    const phrases = [
      "Learn programming from real-world developers.",
      "Master the latest web technologies.",
      "Build your future with DevAcademy."
    ];
    const h1 = document.getElementById("animated-h1");
    let phraseIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typeSpeed = 100;

    function typeEffect() {
      const currentPhrase = phrases[phraseIndex];

      if (isDeleting) {
        h1.textContent = currentPhrase.substring(0, charIndex - 1);
        charIndex--;
        typeSpeed = 30; // Faster when deleting
      } else {
        h1.textContent = currentPhrase.substring(0, charIndex + 1);
        charIndex++;
        typeSpeed = 70; // Normal typing speed
      }

      if (!isDeleting && charIndex === currentPhrase.length) {
        isDeleting = true;
        typeSpeed = 2000; // Pause at end of phrase
      } else if (isDeleting && charIndex === 0) {
        isDeleting = false;
        phraseIndex = (phraseIndex + 1) % phrases.length;
        typeSpeed = 500; // Pause before typing next phrase
      }

      setTimeout(typeEffect, typeSpeed);
    }

    // Start the animation
    document.addEventListener('DOMContentLoaded', typeEffect);
  </script>

