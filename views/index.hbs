    // Typing animation for hero section
    const phrases = [
      "Learn programming from industry experts.",
      "Master the latest web technologies.",
      "Build your future with DevAcademy."
    ];
    const h1 = document.getElementById("animated-h1");
    let phraseIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typeSpeed = 100;

    function typeEffect() {
      if (!h1) return;

      const currentPhrase = phrases[phraseIndex];

      if (isDeleting) {
        h1.textContent = currentPhrase.substring(0, charIndex - 1);
        charIndex--;
        typeSpeed = 30;
      } else {
        h1.textContent = currentPhrase.substring(0, charIndex + 1);
        charIndex++;
        typeSpeed = 70;
      }

      if (!isDeleting && charIndex === currentPhrase.length) {
        isDeleting = true;
        typeSpeed = 2000;
      } else if (isDeleting && charIndex === 0) {
        isDeleting = false;
        phraseIndex = (phraseIndex + 1) % phrases.length;
        typeSpeed = 500;
      }

      setTimeout(typeEffect, typeSpeed);
    }

    // Start typing animation when DOM is ready
    document.addEventListener('DOMContentLoaded', () => {
      typeEffect();
    });

    // Scroll animation observer
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observe sections for scroll animations
    document.addEventListener('DOMContentLoaded', () => {
      const sections = document.querySelectorAll('.second-section, .third-section, .five-section, .faq-section, .fourth-section, .interactive-section, .quiz-section');
      sections.forEach(section => {
        section.classList.add('scroll-animate');
        observer.observe(section);
      });

      // Stagger animation for stat cards
      const secondSection = document.querySelector('.second-section');
      if (secondSection) {
        secondSection.classList.add('scroll-animate-stagger');
      }

      // Stagger animation for feature cards
      const thirdSection = document.querySelector('.third-section .cards');
      if (thirdSection) {
        thirdSection.classList.add('scroll-animate-stagger');
        observer.observe(thirdSection);
      }

      // Stagger animation for course cards
      const coursesContainer = document.querySelector('.five-section .courses');
      if (coursesContainer) {
        coursesContainer.classList.add('scroll-animate-stagger');
        observer.observe(coursesContainer);
      }

      // Stagger animation for FAQ items
      const faqSection = document.querySelector('.faq-section');
      if (faqSection) {
        faqSection.classList.add('scroll-animate-stagger');
      }
    });
  </script>

