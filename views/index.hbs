    <div class="container">
      <h1>Featured Courses</h1>
      <p>Hand-picked courses designed to take you from beginner to professional</p>
      <div class="courses">
        {{#if courses}}
        {{#each courses}}
        <article class="featured-course-card">
          <a href="/course/course-view?id={{course_id}}" class="course-card-link">
            <div class="card-image-wrapper">
